<Window x:Class="KomplettProductFollower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KomplettProductFollower"
        mc:Ignorable="d"
        Title="Komplett Product Follower" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="productListBox" HorizontalAlignment="Left" Height="352" Margin="10,40,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="getPriceBtn" Content="Get Prices" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="getPriceBtn_Click"/>
        <Button x:Name="AddProductBtn" Content="Add Product" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="AddProductBtn_Click"/>
        <TextBox x:Name="addProductTextBox" HorizontalAlignment="Left" Height="20" Margin="170,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="456"/>
        <Label x:Name="label" Content="Paste URL To Product Here" HorizontalAlignment="Left" Height="23" Margin="631,7,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
